<h1> <%= @doctor.name %> </h1>
<h2> <%= @doctor.department %> </h2>
<h3 Apointments </h3>

<ul>
    <% @doctor.appointments.each do |appt| %>
        <li> <%= appt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %> </li>
        <li> <%= link_to appt.patient.name, patient_path(appt.patient) %> </li>
    <% end %>
</ul>